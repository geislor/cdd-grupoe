#!/usr/bin/env bash

isort --recursive --check-only grupoe tests
if [ $? -ne 0 ]; then
  echo "[!] isort failed! Run 'isort -rc -y grupoe tests'"
  exit 1
fi
echo "[+] isort success!"



pylint grupoe
if [ $? -ne 0 ]; then
  echo "[!] pylint failed! Please fix code before push"
  exit 1
fi
echo "[+] pylint success!"



exit 0
